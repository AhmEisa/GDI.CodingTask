@page
@model TaxiBooking.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Login</h2>
                    <form method="post" class="needs-validation" novalidate>
                        @Html.ValidationSummary()
                        <div class="form-group">
                            <label for="UserId">User ID:</label>
                            <input type="text" class="form-control" id="UserId" name="UserId" asp-for="UserId" required />
                            <div class="invalid-feedback">
                                @Html.ValidationMessageFor(model => model.UserId)
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Password">Password:</label>
                            <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" required />
                            <div class="invalid-feedback">
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block my-2">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
