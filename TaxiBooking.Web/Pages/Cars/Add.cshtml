@page
@model TaxiBooking.Web.Pages.Cars.AddModel
@{
    ViewData["Title"] = "Add Car";
    Layout = "~/Pages/Shared/_Layout.cshtml"; 
}

<div class="container mt-5">
    <h2>Add a New Car</h2>
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert @Model.AlertType" role="alert">
            @Model.Message
        </div>
    }

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="CarNo">Car No:</label>
            <input type="text" class="form-control" id="CarNo" name="CarNumber" asp-for="Car.CarNumber" required />
            <div class="invalid-feedback">
                @Html.ValidationMessageFor(model => model.Car.CarNumber)
            </div>
        </div>
        <div class="form-group">
            <label for="CarColor">Car Color:</label>
            <input type="text" class="form-control" id="CarColor" name="CarColor" asp-for="Car.CarColor" required />
            <div class="invalid-feedback">
                @Html.ValidationMessageFor(model => model.Car.CarColor)
            </div>
        </div>
        <div class="form-group">
            <label for="CarModel">Car Model:</label>
            <input type="text" class="form-control" id="CarModel" name="CarModel" asp-for="Car.CarModel" required />
            <div class="invalid-feedback">
                @Html.ValidationMessageFor(model => model.Car.CarModel)
            </div>
        </div>
        <div class="form-group">
            <label for="RegistrationExpiryDate">Car Registration Expiry Date:</label>
            <input type="date" class="form-control" id="RegistrationExpiryDate" name="RegistrationExpiryDate" asp-for="Car.RegistrationExpiryDate" required />
            <div class="invalid-feedback">
                @Html.ValidationMessageFor(model => model.Car.RegistrationExpiryDate)
            </div>
        </div>
        <div class="form-group">
            <label for="YearOfManufacture">Car Year Of Manufacture:</label>
            <input type="number" class="form-control" id="YearOfManufacture" name="YearOfManufacture" asp-for="Car.YearOfManufacture" required />
            <div class="invalid-feedback">
                @Html.ValidationMessageFor(model => model.Car.YearOfManufacture)
            </div>
        </div>
        <div class="form-group">
            <label for="OwnerName">Car Owner Name:</label>
            <input type="text" class="form-control" id="OwnerName" name="OwnerName" asp-for="Car.OwnerName" required />
            <div class="invalid-feedback">
                @Html.ValidationMessageFor(model => model.Car.OwnerName)
            </div>
        </div>
      
        <div class="form-group">
            <label for="Attachments">Attachments:</label>
            <input type="file" class="form-control-file" id="Attachments" name="Attachments" asp-for="Car.Attachments" multiple accept=".pdf, .jpg, .jpeg, .png" />
            <div class="invalid-feedback">
                @Html.ValidationMessageFor(model => model.Car.Attachments)
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add Car</button>
    </form>
</div>